<div class="row">
    <div class="col-md-9">
        <div>
            @foreach (var item in Model.PodCategoriesList)
            {
                @item.PodCategoryName
                <table>
                    <tr>
                        <td>
                            <img src="@item.PodCategoryImagePath">
                        </td>
                        <td style="width:10px"></td>
                        <td style="vertical-align:top">
                            @item.PodCategoryText
                        </td>

                    </tr>
                    <tr style="height:20px">
                        <td colspan="3"></td>
                    </tr>
                </table>
            }
        </div>


        <br />

        <h2>Price:</h2>
        <div>
            <div class="panel-group" id="accordion">
                <a data-toggle="collapse" data-parent="#accordion" href="">
                    dfgdfgdfgdfg
                </a>
                @foreach (var item in Model.PodCategoriesList)
                {
                    <div class="panel panel-default">

                        <div class="panel-heading" style="background-color:aqua">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href='@string.Format("#collapse{0}", item.PodCategoryId)'>
                                    @item.PodCategoryName
                                </a>
                            </h4>
                        </div>

                        <div id="@string.Format("collapse{0}", item.PodCategoryId)" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <table class="table table-condensed">
                                    <tbody>
                                        @foreach (var itemPrice in item.ServicePriceList)
                                        {

                                            <tr>
                                                <td>
                                                    @itemPrice.PriceName
                                                </td>
                                                <td>
                                                    @itemPrice.PriceType.PriceTypeName
                                                </td>
                                                <td>
                                                    @itemPrice.PriceCost
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>


    </div>
    <div class="col-md-3">
        @Html.Partial("_UslugiPartial")
    </div>
</div>